<h1>Zoho Access Token</h1>

<% if @response %>
  <h2>Response:</h2>
  <ul>
    <li><strong>Access Token:</strong> <%= @response["access_token"] %></li>
    <li><strong>Scope:</strong> <%= @response["scope"] %></li>
    <li><strong>API Domain:</strong> <%= @response["api_domain"] %></li>
    <li><strong>Token Type:</strong> <%= @response["token_type"] %></li>
    <li><strong>Expires In:</strong> <%= @response["expires_in"] %> seconds</li>
  </ul>
<% elsif @error %>
  <h2>Error:</h2>
  <pre><%= @error %></pre>
<% else %>
  <p>No response data available.</p>
<% end %>
